#!/usr/bin/env bash
# Script to change localhost and facebook.com IP addresses

# Backup the current /etc/hosts file
cp /etc/hosts /etc/hosts.bak

# Modify /etc/hosts to resolve localhost to 127.0.0.2 and facebook.com to 8.8.8.8
# Remove any existing entries for localhost and facebook.com to prevent duplicates
sed -i '/localhost/d' /etc/hosts
sed -i '/facebook.com/d' /etc/hosts

# Add new entries to /etc/hosts
echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts

echo "IP addresses for localhost and facebook.com have been updated."

