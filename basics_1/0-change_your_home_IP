#!/usr/bin/env bash
# Script to change localhost and facebook.com IP addresses

# Backup the current /etc/hosts file
cp /etc/hosts /etc/hosts.bak

# Manually remove any existing localhost and facebook.com entries
grep -v 'localhost' /etc/hosts | grep -v 'facebook.com' > /tmp/hosts_tmp

# Add the new entries to the temporary file
echo "127.0.0.2 localhost" >> /tmp/hosts_tmp
echo "8.8.8.8 facebook.com" >> /tmp/hosts_tmp

# Move the temporary file back to /etc/hosts
mv /tmp/hosts_tmp /etc/hosts

echo "IP addresses for localhost and facebook.com have been updated."


